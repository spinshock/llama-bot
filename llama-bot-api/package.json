{
  "name": "llama-bot-api",
  "version": "1.0.0",
  "description": "Llama-bot REST API with Express",
  "main": "index.js",
  "author": "Yavor Filipov",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build && concurrently --kill-others \"tsc -w\" \"nodemon dist/index.js -e ts\"",
    "debug": "npm run build && concurrently --kill-others \"tsc -w\" \"nodemon --inspect dist/index.js -e ts\"",
    "test:watch": "mocha -r ts-node/register -w ./spec/**/*.spec.ts --watch-extensions ts",
    "test": "mocha -r ts-node/register -w ./spec/**/*.spec.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:test": "tslint -c tslint.json 'spec/**/*.ts'",
    "lint:test:fix": "tslint -c tslint.json 'spec/**/*.ts'"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "minimist": "^1.2.5",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/node": "^16.9.4",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
